{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "mergeConfidence:all-badges",
    "group:allNonMajor"
  ],
  "rangeStrategy": "bump",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^compose.*\\.ya?ml"],
      "matchStrings": [
        "npm (?:i|install) (?:.* )?(?<depName>\\S+)@(?<currentValue>\\S+)"
      ],
      "datasourceTemplate": "npm"
    }
  ],
  "packageRules": [
    {
      "groupName": "Playwright",
      "groupSlug": "playwright",
      "rangeStrategy": "pin",
      "matchPackageNames": [
        "playwright",
        "@playwright/test",
        "mcr.microsoft.com/playwright"
      ],
      "postUpgradeTasks": {
        "commands": [
          "npm ci",
          "docker compose up -d",
          "test:visual-update",
          "docker compose down"
        ],
        "executionMode": "update"
      }
    },
    {
      "groupName": "DDS tokens",
      "groupSlug": "dds-tokens",
      "matchPackageNames": ["@daikin-oss/dds-tokens"]
    }
  ],
  "postUpgradeTasks": {
    "commands": ["npm ci", "npx prettier -w .", "npx eslint --fix"],
    "executionMode": "update"
  }
}

{
  // TSConfig for Node.js codes (build scripts)
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "lib": ["ES2023"],

    "types": ["node"],

    "exactOptionalPropertyTypes": false
  },
  "include": [
    "*",
    "build",
    "scripts",
    // These files run on Node.js, not on the browsers.
    ".storybook/**/main.ts",
    ".storybook/**/middleware.cjs"
  ]
}

{
  "files.associations": {
    "cspell-dictionary.txt": "ignore"
  },
  "tailwindCSS.experimental.classRegex": [
    // ctl
    "ctl\\(\\s*`((?:\\\\.|[^`])+)`\\s*\\)",
    // cva
    [
      "\\[((?:[\\s,]|/\\*[\\s\\S]*?\\*/|//[^\\n]*|\"(?:\\\\.|[^\"])*\")*)\\]",
      "\"((?:\\\\.|[^\"])+)\""
    ],
    // class / className
    ["class(?:Name)?=\"((?:\\\\.|[^\"])+)\""],
    // /* tw */
    ["/\\*\\s*tw\\s*\\*/\\s*\"((?:\\\\.|[^\"])+)\""]
  ]
}

{
  // TSConfig for the storybook codes
  "extends": "./tsconfig.lib.json",
  "compilerOptions": {
    "paths": {
      "#package/*": ["./src/*"],
      "#storybook": ["./src/storybook"]
    }
  },
  "include": ["src", ".storybook/**/*"],
  "exclude": [".storybook/**/main.ts", ".storybook/**/middleware.cjs"]
}
